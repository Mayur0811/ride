<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_navigation_icon"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Change Password"
        android:textFontWeight="400"
        android:textColor="@color/txtColor"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView" />
    <TextView
        android:id="@+id/txtCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/txtColorGray2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="31dp"
        android:text="Current Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="11dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:hint="Current Password"
        android:textColorHint="@color/black2"
        android:textColor="@color/txtColorGray"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selected_payment_tab"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentPassword" />

    <TextView
        android:id="@+id/showCurrentPassword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="View"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:textSize="11sp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/txtColorGray2"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/edCurrentPassword"
        app:layout_constraintEnd_toEndOf="@+id/edCurrentPassword"
        app:layout_constraintTop_toTopOf="@+id/edCurrentPassword" />

    <TextView
        android:id="@+id/txtNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/txtColorGray2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="19dp"
        android:text="New Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edCurrentPassword" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edNewPassword"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="11dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:hint="New Password"
        android:textColorHint="@color/black2"
        android:textColor="@color/txtColorGray"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selected_payment_tab"
        app:layout_constraintTop_toBottomOf="@id/txtNewPassword" />

    <TextView
        android:id="@+id/showNewPassword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="View"
        android:gravity="center"
        android:textSize="11sp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/txtColorGray2"
        android:layout_marginEnd="12dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/edNewPassword"
        app:layout_constraintEnd_toEndOf="@+id/edNewPassword"
        app:layout_constraintTop_toTopOf="@+id/edNewPassword" />

    <TextView
        android:id="@+id/txtConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginLeft="25dp"
        android:textColor="@color/txtColorGray2"
        android:layout_marginTop="19dp"
        android:text="Confirm Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edNewPassword" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="11dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:hint="Confirm Password"
        android:textColorHint="@color/black2"
        android:textColor="@color/txtColorGray"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selected_payment_tab"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword" />

    <TextView
        android:id="@+id/showConfirmPassword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="View"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:textSize="11sp"
        android:elevation="2dp"
        android:textColor="@color/txtColorGray2"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/edConfirmPassword"
        app:layout_constraintEnd_toEndOf="@+id/edConfirmPassword"
        app:layout_constraintTop_toTopOf="@+id/edConfirmPassword" />

    <Button
        android:id="@+id/btnSave"
        style="@style/MainButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:textSize="15sp"
        android:text="Save"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>