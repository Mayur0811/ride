<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="@color/smart_txt"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/driver_icon_layout"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:cardCornerRadius="31dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toRightOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title">
        <ImageView
            android:id="@+id/driver_profile_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/driver_profile"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:text="Gia Aufderhar MD"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintRight_toRightOf="@id/driver_icon_layout"
        app:layout_constraintLeft_toLeftOf="@id/driver_icon_layout"
        app:layout_constraintTop_toBottomOf="@id/driver_icon_layout"/>
    <TextView
        android:id="@+id/driver_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="+01 1234567890"
        android:textSize="10sp"
        android:layout_marginTop="1dp"
        android:textColor="@color/driver_color"
        app:layout_constraintTop_toBottomOf="@id/driver_name"
        app:layout_constraintLeft_toLeftOf="@id/driver_name"
        app:layout_constraintRight_toRightOf="@id/driver_name"/>
    <TextView
        android:id="@+id/txtGiveRatingText"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="@string/give_rating_text"
        android:textSize="11sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/title_color"
        app:layout_constraintTop_toBottomOf="@id/driver_phone_no"
        app:layout_constraintLeft_toLeftOf="@id/driver_phone_no"
        app:layout_constraintRight_toRightOf="@id/driver_phone_no"/>
    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="204dp"
        android:layout_height="30dp"
        app:mrb_progressTint="#FFC400"
        app:mrb_fillBackgroundStars="true"
        app:mrb_secondaryProgressTint="#CDCDCD"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/txtGiveRatingText"
        app:layout_constraintRight_toRightOf="@id/txtGiveRatingText"
        app:layout_constraintTop_toBottomOf="@id/txtGiveRatingText"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        style="@style/MainButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="30dp"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="Submit"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>